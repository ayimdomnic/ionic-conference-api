{
  "name": "ionic-conference-api",
  "version": "0.1.0",
  "description": "RESTful APIs for Ionic Conference App built with koa2",
  "author": {
    "name": "Damien Dell'Amico",
    "email": "damien.dellamico@gmail.com",
    "url": "https://github.com/ddellamico"
  },
  "main": "babel.js",
  "scripts": {
    "commit": "git-cz",
    "clean": "rm -rf dist",
    "start": "node babel.js",
    "babel": "./node_modules/.bin/babel src -d dist --source-maps --copy-files",
    "build": "npm run clean && npm run babel && node ./dist",
    "dev": "./node_modules/.bin/nodemon --debug -L babel.js --ext 'js json'",
    "debug": "DEBUG=ion-conf-app:* && npm run dev",
    "release": "standard-version --no-verify",
    "integration-test": "mocha test",
    "lint": "./node_modules/.bin/eslint --cache .",
    "lint:fix": "npm run lint -- --fix",
    "outdated": "npm outdated --depth 0",
    "prepush": "npm shrinkwrap",
    "postmerge": "npm install",
    "docker-build": "docker build --no-cache=true -t ddellamico/ion-conf-api .",
    "docker-tag": "docker tag ddellamico/ion-conf-api ddellamico/ion-conf-api:0.0.1",
    "docker-push": "docker push ddellamico/ion-conf-api:0.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ddellamico/ionic-conference-api"
  },
  "engines": {
    "node": ">=5.x",
    "npm": ">=3.x"
  },
  "bugs": {
    "url": "https://github.com/ddellamico/ionic-conference-api/issues"
  },
  "files": [
    "src",
    "README.md"
  ],
  "keywords": [
    "ionic",
    "koa",
    "koa2",
    "koa v2",
    "babel",
    "es6",
    "JWT",
    "jsonwebtoken",
    "oauth2",
    "node",
    "rest",
    "mongoose",
    "mongo",
    "docker",
    "docker-compose"
  ],
  "dependencies": {
    "bcrypt": "^0.8.6",
    "bluebird": "^3.4.1",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "import-dir": "0.0.1",
    "jsonwebtoken": "^7.1.3",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-compose": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-helmet": "^2.0.0",
    "koa-jwt": "^1.2.0",
    "koa-logger": "^2.0.0",
    "koa-methodoverride": "^2.0.0",
    "koa-mount": "github:coderhaoxin/koa-mount#next",
    "koa-passport": "^2.1.1",
    "koa-router": "^7.0.1",
    "mongoose": "^4.5.4",
    "mongoose-validator": "^1.2.4",
    "node-uuid": "^1.4.7",
    "oauth2orize-koa": "^1.3.2",
    "passport-http": "^0.3.0",
    "passport-jwt": "^2.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "source-map-support": "^0.4.0",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.0.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.0.4",
    "eslint-plugin-react": "^5.0.1",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "commitizen": "2.8.1",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.3.2",
    "standard-version": "^2.4.0",
    "validate-commit-msg": "^2.6.1",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.2.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT"
}
